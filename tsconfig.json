{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.ts", "*.tsx"]
    },
    "allowImportingTsExtensions": false,
    "types": ["node", "@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
} 